{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "moduleResolution": "Node",
        "strict": true,
        "sourceMap": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noEmit": true,
        "strictNullChecks": false,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "allowJs": false,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src",
        "test"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}
